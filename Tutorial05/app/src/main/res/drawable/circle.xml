<?xml version="1.0" encoding="utf-8"?>
<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="oval">
            <gradient
                android:startColor="#646464"
                android:endColor="#505050"
                android:centerColor="@color/secondary_text"
                android:angle="180"
                android:type="linear"/>
        </shape>
    </item>

    <item>
        <shape android:shape="oval">
            <gradient
                android:startColor="#3C3C3C"
                android:centerColor="@color/secondary_text"
                android:endColor="#282828"
                android:angle="45"
                android:type="linear" />
        </shape>
    </item>

    <item>
        <shape android:shape="oval">
            <gradient
                android:startColor="#141414"
                android:centerColor="#191919"
                android:endColor="#141414"
                android:angle="90"
                android:type="linear" />
        </shape>
    </item>

    <item>
        <shape android:shape="oval">
            <stroke
                android:width="1dip"
                android:color="@color/invalid" />
        </shape>
    </item>
</layer-list>